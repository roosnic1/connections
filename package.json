{
  "name": "connections-clone",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:new": "next dev --turbopack",
    "dev": "next dev",
    "build": "next build",
    "build:prod": "npx prisma migrate deploy && npx next build",
    "start": "next start",
    "lint": "next lint",
    "prisma:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "prisma:push": "dotenv -e .env.local -- prisma db push",
    "prisma:seed": "dotenv -e .env.local -- prisma db seed",
    "prisma:studio": "dotenv -e .env.local -- prisma studio",
    "postinstall": "prisma generate --no-engine",
    "prepare": "husky"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@prisma/client": "^6.12.0",
    "@prisma/extension-accelerate": "^2.0.1",
    "@sentry/browser": "^9.27.0",
    "@sentry/nextjs": "^9.27.0",
    "@tolgee/react": "^6.2.6",
    "@tolgee/web": "^6.2.6",
    "@unleash/nextjs": "^1.6.2",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "luxon": "^3.6.1",
    "next": "15.3.3",
    "next-auth": "^4.24.11",
    "next-intl": "^4.3.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-toastify": "^11.0.5",
    "unleash-proxy-client": "^3.7.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.8",
    "@types/luxon": "^3.6.2",
    "@types/node": "^20.19.0",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.6",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8",
    "eslint-config-next": "15.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "postcss": "^8",
    "prettier": "3.5.3",
    "prisma": "^6.12.0",
    "tailwindcss": "^4.1.8",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.6"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
