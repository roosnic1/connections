{
  "name": "connections-clone",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:prod": "npx prisma migrate deploy && npx next build",
    "start": "next start",
    "lint": "next lint",
    "prisma:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "prisma:push": "dotenv -e .env.local -- prisma db push",
    "prisma:seed": "dotenv -e .env.local -- prisma db seed",
    "prisma:studio": "dotenv -e .env.local -- prisma studio",
    "postinstall": "prisma generate",
    "prepare": "husky"
  },
  "dependencies": {
    "@posthog/nextjs-config": "^1.0.2",
    "@prisma/client": "^7.4.0",
    "@tolgee/react": "^6.2.6",
    "@tolgee/web": "^6.2.6",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "dotenv": "^17.3.1",
    "luxon": "^3.6.1",
    "next": "16.1.6",
    "next-intl": "^4.3.4",
    "posthog-js": "^1.257.2",
    "posthog-node": "^5.6.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.8",
    "@types/luxon": "^3.6.2",
    "@types/node": "^20.19.0",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "postcss": "^8",
    "prettier": "3.5.3",
    "prisma": "^7.4.0",
    "tailwindcss": "^4.1.8",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "overrides": {
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3"
  }
}
