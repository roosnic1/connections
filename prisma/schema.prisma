generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Connection {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  publishDate   DateTime?
  level1title   String
  level1words   String[]
  level2title   String
  level2words   String[]
  level3title   String
  level3words   String[]
  level4title   String
  level4words   String[]
}