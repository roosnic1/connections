generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Connection {
  id            Int @id @default(autoincrement())
  publishDate   DateTime
  categories    Category[]
}

model Category {
  id            Int @id @default(autoincrement())
  title         String
  words         String[]
  level         Int
  connection    Connection @relation(fields: [connectionId], references: [id])
  connectionId  Int
}